<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PIPER.Views.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIPER.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid Padding="10, 10, 10, 10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Log History:" Grid.Row="0" Padding="0, 0, 0, 10"/>
            <TextBox x:Name="LogTextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch" IsReadOnly="True" />
        </Grid>
    </Grid>
</Page>
