<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PIPER.Views.KernelManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIPER.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Padding="10, 10, 10, 0" >
                <TextBlock Text="Juypter Kernel Management" FontSize="26"/>
                <TextBlock/>
                <ComboBox x:Name="comboKernels" ItemsSource="{x:Bind PythonKernels}"  DisplayMemberPath="Item1" SelectedValuePath="Item2"  SelectionChanged="comboKernel_SelectionChanged"
                    Header="Kernels:" MinWidth="200"/>
                <TextBlock/>
                <Button Content="Delete Selected Kernel" Click="Delete_Button_Click"/>
                <TextBlock/>
                <ComboBox x:Name="comboEnvironments" ItemsSource="{x:Bind PythonEnvironments}"  DisplayMemberPath="Item1" SelectedValuePath="Item2"  SelectionChanged="comboEnvironment_SelectionChanged"
                    Header="Virtual Environments:" MinWidth="200"/>
                <TextBlock/>
                <Button Content="Create New Kernel" Click="Create_Button_Click" Style="{StaticResource AccentButtonStyle}"/>
                
            </StackPanel>


            <!-- Bottom Text -->
            <TextBlock Grid.Row="1"
                Text="{Binding FooterText}"
                HorizontalAlignment="Center"
                Margin="0,30,0,10"
                FontSize="14"
                Foreground="Gray"/>
        </Grid>
    </ScrollViewer>
    
</Page>
